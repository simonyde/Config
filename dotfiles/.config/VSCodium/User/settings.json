{
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
    "workbench.preferredLightColorTheme": "Catppuccin Latte",
    "catppuccin.accentColor": "lavender",
    "catppuccin.boldKeywords": false,
    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "solid",
    "editor.renderLineHighlight": "none",
    "editor.fontSize": 18,
    "editor.fontFamily": "'JetbrainsMono NFM'",
    "editor.fontLigatures": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "python.autoComplete.extraPaths": [
        "~/.nix-profile/bin/python3"
    ],
    "python.analysis.extraPaths": [
        "~/.nix-profile/bin/python3"
    ],
    "jupyter.themeMatplotlibPlots": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 800,
    "editor.multiCursorModifier": "ctrlCmd",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "editor.inlineSuggest.enabled": true,
    "todo-tree.regex.regex": "(//|#|%|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "iconColour": "yellow",
            "background": "yellow",
            "foreground": "black",
            "gutterIcon": false
        },
        "FIXME": {
            "icon": "flame",
            "iconColour": "hotpink",
            "background": "hotpink",
            "foreground": "black",
            "gutterIcon": false
        }
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false,
        "latex": false
    },
    "vim.leader": "space",
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-u>": true,
        "<C-s>": false,
        "<C-z>": false
    },
    "vim.argumentObjectClosingDelimiters": [ ")", "]", "}" ],
    "vim.argumentObjectOpeningDelimiters": [ "(", "[", "{" ],
    "vim.visualModeKeyBindings": [
        { "before": [">"], "commands": ["editor.action.indentLines"] },  
        { "before": ["<"], "commands": ["editor.action.outdentLines"] }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["U"], "after": ["<C-r>"] },  
        { "before": [ "g", "h" ], "after": ["0"] },  
        { "before": [ "g", "s" ], "after": ["^"] },  
        { "before": [ "g", "l" ], "after": ["$"] }
    ],
    "vim.normalModeKeyBindings": [
        { "before": ["C"], "commands": ["editor.action.insertCursorBelow"] },  
        { "before": ["<leader>", "k"], "commands": ["editor.action.showHover"] },
        { "before": ["<leader>", "r"], "commands": ["editor.action.rename"] },
        { "before": ["<leader>", "s"], "commands": ["editor.action.gotoSymbol"] },
        { "before": ["<leader>", "S"], "commands": ["editor.action.showAllSymbols"] }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["U"], "after": ["<C-r>"] },  
        { "before": [ "g", "h" ], "after": ["0"] },  
        { "before": [ "g", "s" ], "after": ["^"] },  
        { "before": [ "g", "l" ], "after": ["$"] }
    ],
    "keyboard.dispatch": "keyCode",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "extensions.autoCheckUpdates": false,
    "update.mode": "none",
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "toggle",
    "workbench.activityBar.visible": false
}
